###############################################################################
# Terraform Cloud Variables Configuration
# Copy these values into your Terraform Cloud workspace variables
###############################################################################

# AWS Region
aws_region = "eu-central-1"

# SSH Public Key (run: cat ~/.ssh/id_rsa.pub)
# Mark as: Sensitive ✓
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAA... your-email@example.com"  # ← CHANGE THIS

# Your Public IP (run: curl https://api.ipify.org)
# Mark as: HCL ✓
allowed_ssh_cidr    = ["YOUR_IP/32"]  # ← CHANGE THIS (e.g., ["145.14.18.205/32"])
allowed_kibana_cidr = ["YOUR_IP/32"]  # ← CHANGE THIS (e.g., ["145.14.18.205/32"])

# Optional: Defaults (adjust if needed)
project_name       = "secure-logging"
environment        = "production"
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
instance_type      = "m7i-flex.large"  # Free Tier (2 vCPU, 8GB RAM) - Perfect for ELK!
root_volume_size   = 30                # Free Tier includes 30GB

###############################################################################
# AWS Credentials (Set as Environment Variables in Terraform Cloud)
###############################################################################
# Variable Name: AWS_ACCESS_KEY_ID
# Type: Environment variable
# Sensitive: Yes ✓
#
# Variable Name: AWS_SECRET_ACCESS_KEY
# Type: Environment variable
# Sensitive: Yes ✓
#
# Variable Name: AWS_DEFAULT_REGION
# Type: Environment variable
# Value: eu-central-1
###############################################################################

# Quick Reference:
# - Get SSH key: cat ~/.ssh/id_rsa.pub
# - Get your IP: curl https://api.ipify.org
# - CIDR format: ["IP/32"] with HCL checkbox checked
# - ssh_public_key: Mark as Sensitive in Terraform Cloud
